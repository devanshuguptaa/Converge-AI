# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# SLACK CONFIGURATION
# ============================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=

# ============================================
# GOOGLE GEMINI CONFIGURATION
# ============================================
# Get your API key from https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Model configuration
GEMINI_CHAT_MODEL=
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# ============================================
# MEMORY CONFIGURATION (mem0)
# ============================================
# Get your API key from https://app.mem0.ai/
MEM0_API_KEY=
MEMORY_ENABLED=true

# ============================================
# RAG CONFIGURATION
# ============================================
RAG_ENABLED=true
RAG_MAX_RESULTS=10
RAG_INDEXER_INTERVAL_MINUTES=60
VECTOR_DB_PATH=./data/chromadb

# ============================================
# MCP CONFIGURATION (GitHub, Notion)
# ============================================
# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-token-here

# Notion Integration Token
# Create at: https://www.notion.so/my-integrations
NOTION_API_TOKEN=secret_your-notion-token-here

MCP_ENABLED=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=./data/assistant.db

# ============================================
# APPLICATION CONFIGURATION
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# FastAPI configuration
HOST=0.0.0.0
PORT=8000

# ============================================
# OPTIONAL: DM POLICY
# ============================================
# Options: open, pairing, allowlist
DM_POLICY=open

# If using allowlist, comma-separated user IDs
# ALLOWED_USERS=U123456,U789012
